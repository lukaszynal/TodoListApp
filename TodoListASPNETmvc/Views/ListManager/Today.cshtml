@model ScheduleViewModel
@{
    ViewData["Title"] = "Today";
}

@if (Model.Tasks.Any())
{
    @foreach (var task in Model.Tasks)
    {
        <p>
            <partial name="TaskSummary_partial" model="task" />
        </p>
    }
}
else
{
    <p><h6>There are no planned tasks to complete today</h6></p>
}

<div page-model="@Model.PagingInfo" page-action="Today" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-dark" page-url-listTitle="@Model.CurrentList.Title"
     class="btn-group d-grid gap-2 d-md-block">
</div>
